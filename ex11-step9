<script type="text/javascript" src="http://d3js.org/d3.v3.js"></script>
<style type="text/css">

body{
     background-color:lightgrey <!-- Use LIGHTGREY color -->
    }
svg{
     background-color:white <!-- Use WHITE color -->
    }
.axis path,
.axis line{
            fill:none;
            stroke:black;
            shape-rendering:crispEdge;
           }
.axis text{
            font-family:sans-serif;
            font-size:11px;
           }
</style>

